{
  "name": "si-lidity",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "cleanup": "hardhat clean",
    "test": "hardhat test mocha",
    "deploy:mainnet": "hardhat ignition deploy ignition/modules/VaultViewerMainnet.ts --network mainnet",
    "deploy:hoodi": "hardhat ignition deploy ignition/modules/VaultViewerHoodi.ts --network hoodi",
    "verify:deployed-contracts": "hardhat verify:deployed-contracts",
    "abis:extract": "hardhat abis:extract",
    "lint:sol": "solhint 'si-contracts/**/*.sol'",
    "lint:sol:fix": "yarn lint:sol --fix",
    "lint:ts": "eslint . --max-warnings=0",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint": "yarn lint:sol && yarn lint:ts",
    "format": "prettier . --write",
    "prepare": "git config core.hooksPath .git-hooks || echo 'Not in a git repo'"
  },
  "lint-staged": {
    "./**/*.ts": [
      "eslint --max-warnings=0 --fix"
    ],
    "./**/*.{ts,md,json}": [
      "prettier --write"
    ],
    "./test/**/*.sol": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@commitlint/prompt": "19.7.1",
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.21.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
    "@nomicfoundation/hardhat-ethers": "^4.0.0-next.1",
    "@nomicfoundation/hardhat-ethers-chai-matchers": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-ignition": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-keystore": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-mocha": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0-next.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-typechain": "^3.0.0-next.1",
    "@nomicfoundation/ignition-core": "0.15.10",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.20",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.9",
    "bigint-conversion": "2.4.3",
    "chai": "^5.1.2",
    "dotenv": "16.4.7",
    "eslint": "9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "ethers": "6.13.5",
    "forge-std": "foundry-rs/forge-std#v1.9.4",
    "glob": "11.0.1",
    "globals": "15.12.0",
    "hardhat": "3.0.0-next.1",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-gas-reporter": "1.0.10",
    "hardhat-ignore-warnings": "0.2.12",
    "hardhat-tracer": "3.1.0",
    "hardhat-watcher": "2.5.0",
    "lint-staged": "15.4.3",
    "mocha": "^11.0.0",
    "prettier": "3.5.3",
    "prettier-plugin-solidity": "1.4.2",
    "solhint": "5.0.4",
    "solhint-plugin-lido": "0.0.4",
